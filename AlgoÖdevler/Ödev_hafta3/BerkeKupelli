//Berke Kupelii

public class Main {
    public static void main(String[] args) {
// While döngüsü kullanarak Fibonacci serisi
        int n = 10;
        int a = 0, b = 1, c;
        System.out.println("Fibonacci serisi :");
        while (n > 0) {
            System.out.print(a + " ");
            c = a + b;
            a = b;
            b = c;
            n--;
        }
        System.out.println();

// While döngüsü kullanarak çarpım tablosu
        int i = 1;
        System.out.println("Çarpim tablosu :");
        while (i <= 10) {
            int j = 1;
            while (j <= 10) {
                System.out.print(i * j + "\t");
                j++;
            }
            System.out.println();
            i++;
        }

// While döngüsü kullanarak faktöriyel hesaplama
        int num = 5;
        int factorial = 1;
        int temp = num;
        while (temp > 0) {
            factorial *= temp;
            temp--;
        }
        System.out.println(num + " sayisinin faktöriyeli: " + factorial);

// Do-while döngüsü ile sayı toplama
        int sum = 0;
        int number;
        do {
            System.out.print("Bir sayi girin: ");
            number = scanner.nextInt();
            sum += number;
        } while (number != 0);
        System.out.println("Girilen sayilarin toplami:\t" + sum);

// Do-while döngüsü kullanarak 1'den 10'a kadarki tek sayıları yazdırma
        int k = 1;
        System.out.println("1'den 10'a kadar tek sayilar :");
        do {
            if (k % 2 != 0) {
                System.out.print(k + " ");
            }
            k++;
        } while (k <= 10);


    }
}
